{% extends "common/framework.twig" %}
{% block stylesheet %}
    <link rel="stylesheet" href="/static/main/css/index.css" />
{% endblock %}

{% block title %}
    Gemini Online Judge
{% endblock %}
{% block contents %}
    <div class="wrapper">
        <div class="container">
            <h3>Problems</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td width="33%">#</td>
                        <td width="33%">Title</td>
                        <td width="33%">Difficulty Rate</td></tr>
                </thead>
                <tbody >
                    {% for problem in problems %}
                    <tr>
                        <td width="33%">{{ problem.id }}</td>
                        <td width="33%">
                            <a href="/problem/{{ problem.id }}">{{ problem.title }}</a>
                        </td>
                        <td width="33%">
                            {% if problem.submit == 0 %}
                             No submits
                            {% else %}
                                {{ (problem.accept * 100 / problem.submit) | number_format(2) }}%
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <nav class="content-center">
                <ul class="pagination">
                    {% for i in 1..pageCount  %}
                    <li><a href="/?page={{ i }}">{{ i }}</a></li>
                    {% endfor %}
                    {% if page + 1 <= pageCount %}
                    <li>
                        <a href="/?page={{ page+1 }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {% endif %}
            </nav>
        </div>
    </div>
{% endblock %}