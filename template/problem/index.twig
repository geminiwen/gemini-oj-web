{% extends "common/framework.twig" %}

{% block stylesheet %}
    <link rel="stylesheet" href="/static/main/css/problem/index.css" />
{% endblock %}

{% block title %}
    Problem {{ problem.title }} - {{ globalTitle }}
{% endblock %}

{% block contents %}
    <div class="container">
        <div class="problem-title" >
            <div class="center-block h1 title"> {{ problem.title }} </div>
            <table class="center problem-spec">
                <tbody>
                <tr>
                    <td>Time Limit: {{ problem.time_limit }}MS</td>
                    <td>Memory Limit: {{ problem.memory_limit }}KB</td>
                </tr>
                <tr>
                    <td>Total: {{ problem.submit }}</td>
                    <td>Accept: {{ problem.accept }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="problem-detail">
            <section>
                <aside>Description</aside>
                <pre>{{ problem.description }}</pre>
            </section>
            <section>
                <aside>Input</aside>
                <pre>{{ problem.input }}</pre>
            </section>
            <section>
                <aside>Output</aside>
                <pre>{{ problem.output }}</pre>
            </section>
            <section>
                <aside>Sample Input</aside>
                <pre>{{ problem.sample_input }}</pre>
            </section>
            <section>
                <aside>Sample Output</aside>
                <pre>{{ problem.sample_output }}</pre>
            </section>
            <div class="content-center">
                <button type="button" class="btn btn-default" onclick="location.href='/problem/{{ problem.id }}/submit'">Submit</button>
            </div>
        </div>

    </div>
{% endblock %}